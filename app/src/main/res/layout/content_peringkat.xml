<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="5dp"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="id.co.unila.navia.infosekolah.PeringkatActivity"
    tools:showIn="@layout/activity_peringkat">

    <Button
        android:id="@+id/btSd"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Sekolah Dasar" />

    <Button
        android:id="@+id/btSmp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Sekolah Menengah Pertama" />

    <Button
        android:id="@+id/btSma"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Sekolah Menengah Atas" />

    <Button
        android:id="@+id/btSmk"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Sekolah Menengah Kejuruan" />
</LinearLayout>
